---
import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.astro";
import Testimonial from "../components/Testimonial.astro";
---

<Layout
	title="Accueil"
	description="Bienvenue chez Abha, votre tailleur pour femmes au Maroc. Découvrez nos collections sur mesure."
>
	<section class="hero">
		<div
			id="heroCarousel"
			class="carousel slide"
			data-bs-ride="carousel"
			aria-label="Diaporama de présentation"
		>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img
									src="/illustration-banner/banner-1-21da6398-a527-4c75-8c63-1fa53b0a0926.png"
									class="d-block w-100"
									alt="Bannière Abha 1"
								/>
								<div class="hero-overlay">
									<div class="hero-overlay-inner">
										<h1>Abha - Élégance Marocaine</h1>
										<p class="lead">
											Couture sur mesure pour femmes
										</p>
										<a
											href="/products"
											class="btn btn-accent"
											>Découvrez Nos Produits</a
										>
									</div>
								</div>
							</div>
							<div class="carousel-item">
								<img
									src="/illustration-banner/banner-2-a86f1759-2c3c-4089-9844-5d8d2e65679e.png"
									class="d-block w-100"
									alt="Bannière Abha 2"
								/>
								<div class="hero-overlay">
									<div class="hero-overlay-inner">
										<h1>Artisanat & Modernité</h1>
										<p class="lead">
											Des créations uniques pour vous
										</p>
										<a
											href="/products"
											class="btn btn-accent"
											>Explorez Maintenant</a
										>
									</div>
								</div>
							</div>
							<div class="carousel-item">
								<img
									src="/illustration-banner/banner-3-3521a8fc-476a-45dc-824d-39e22fc4c861.png"
									class="d-block w-100"
									alt="Bannière Abha 3"
								/>
								<div class="hero-overlay">
									<div class="hero-overlay-inner">
										<h1>Célébrez Votre Style</h1>
										<p class="lead">Inspiré par le Maroc</p>
										<a
											href="/products"
											class="btn btn-accent"
											>Voir la Collection</a
										>
									</div>
								</div>
							</div>
						</div>
						<button
							class="carousel-control-prev"
							type="button"
							data-bs-target="#heroCarousel"
							data-bs-slide="prev"
							aria-label="Image précédente"
						>
							<span
								class="carousel-control-prev-icon"
								aria-hidden="true"></span>
						</button>
						<button
							class="carousel-control-next"
							type="button"
							data-bs-target="#heroCarousel"
							data-bs-slide="next"
							aria-label="Image suivante"
						>
							<span
								class="carousel-control-next-icon"
								aria-hidden="true"></span>
						</button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="py-5">
		<div class="container">
			<h2 class="text-center mb-4">Nos Produits Phares</h2>
			<div class="row">
				<div class="col-md-4">
					<ProductCard
						title="Caftan Moderne"
						image="/products/17a9e43e-6484-45c4-b7b7-e823ddc65bc8.png"
						description="Caftan élégant pour occasions spéciales."
					/>
				</div>
				<div class="col-md-4">
					<ProductCard
						title="Jellaba Sur Mesure"
						image="/products/826ebb1b-58d0-435b-92e9-c8a58912796e.png"
						description="Confort et style quotidien."
					/>
				</div>
				<div class="col-md-4">
					<ProductCard
						title="Robes Traditionnelles"
						image="/products/7069a4cf-e1af-41ef-9f9e-d8c9aba38780.png"
						description="Fusion de tradition et mode."
					/>
				</div>
			</div>
		</div>
	</section>

	<section class="bg-light py-5">
		<div class="container">
			<h2 class="text-center mb-4">Témoignages</h2>
			<div class="row">
				<div class="col-md-4">
					<Testimonial
						name="Fatima Z."
						quote="Abha a transformé ma garde-robe avec des pièces uniques !"
					/>
				</div>
				<div class="col-md-4">
					<Testimonial
						name="Aisha M."
						quote="Service impeccable et qualité exceptionnelle."
					/>
				</div>
				<div class="col-md-4">
					<Testimonial
						name="Laila K."
						quote="Je recommande pour toute femme cherchant l'élégance marocaine."
					/>
				</div>
			</div>
		</div>
	</section>

	<section class="py-5">
		<div class="container text-center">
			<h2>Contactez-Nous</h2>
			<p>Prenez rendez-vous ou posez une question.</p>
			<a href="/contact" class="btn btn-primary">Formulaire de Contact</a>
		</div>
	</section>
</Layout>
