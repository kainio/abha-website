---
const { name, role, image, bio } = Astro.props;
---
<div class="card text-center">
  <img src={image} class="card-img-top rounded-circle mx-auto mt-3" alt={name} style="width: 150px; height: 150px;" loading="lazy" />
  <div class="card-body">
    <h5 class="card-title">{name}</h5>
    <p class="card-text"><small class="text-muted">{role}</small></p>
    <p>{bio}</p>
  </div>
</div>